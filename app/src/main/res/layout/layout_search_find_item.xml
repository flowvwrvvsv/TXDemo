<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_search_find_item_all_bkg"
              android:orientation="horizontal"
              android:padding="10dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/shape_search_find_item"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/search_find_item_image"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:background="@color/color_search_find_edit_bkg"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名："
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_search_find_item_size"/>


                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="李英志"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_search_find_item_size"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别："
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_search_find_item_size"/>


                <TextView
                    android:id="@+id/item_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="男"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_search_find_item_size"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_search_find_item_top"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="民族："
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_search_find_item_size"/>


                <TextView
                    android:id="@+id/item_nation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="缅甸族"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_search_find_item_size"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="宗教："
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_search_find_item_size"/>


                <TextView
                    android:id="@+id/item_religion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="佛教"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_search_find_item_size"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_search_find_item_top"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="缅甸身份证号："
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_search_find_item_size"/>


            <TextView
                android:id="@+id/item_myanmar_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="231231231"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_search_find_item_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_search_find_item_top"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通行证编号："
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_search_find_item_size"/>


            <TextView
                android:id="@+id/item_pass_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="231231231"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_search_find_item_size"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_search_find_item_top"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="证件号："
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_search_find_item_size"/>


            <TextView
                android:id="@+id/item_document_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="MM312523121"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_search_find_item_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_search_find_item_top"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="证件有效期："
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_search_find_item_size"/>


            <TextView
                android:id="@+id/item_document_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:maxLines="1"
                android:text="2019-01-01 至 2-19-12-31"
                android:textColor="@color/white"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>